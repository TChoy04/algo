#include <bits/stdc++.h>
using namespace std;
 
void setIO(string s) {
	freopen((s + ".in").c_str(), "r", stdin);
	freopen((s + ".out").c_str(), "w", stdout);
}
int main(){
	setIO("paint");
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
	int a,b,c,d;
	cin>>a>>b>>c>>d;
	if(max(a,c)<=min(b,d)){
		cout<<max(b,d)-min(a,c);
	}else{
		cout<<(d-c+b-a);
	}
	
	
	
	return 0;
}
