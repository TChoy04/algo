#include <bits/stdc++.h>
using namespace std;

void setIO(string s) {
    freopen((s + ".in").c_str(), "r", stdin);
    freopen((s + ".out").c_str(), "w", stdout);
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int tc;
    cin >> tc;

    while (tc--) {
  		string s;
  		cin>>s;
  		int n = s.size();
  		if(n>10) cout<<s[0]<<n-2<<s[n-1];
  		else cout<<s;
  		cout<<"\n";
	}

		
    }
 

